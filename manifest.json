{
	"name": "stop-youtube",
	"description": "Stop Youtube",
	"version": "0.2",
	"manifest_version": 3,
	"permissions": ["tabs", "scripting", "storage"],
	"host_permissions": ["https://www.youtube.com/*"],
	"background": {
		"service_worker": "dist/background/index.js"
	},
	"action": {
		"default_popup": "dist/popup/index.html"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}

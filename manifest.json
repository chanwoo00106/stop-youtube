{
  "name": "stop-youtube",
  "description": "Stop Youtube",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "dist/background/index.js"
  },
  "action": {
    "default_popup": "dist/popup/index.html"
  }
}
